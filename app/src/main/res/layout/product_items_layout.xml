<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/product_image"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_toRightOf="@+id/product_image"
            android:maxLength="18"
            android:padding="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@+id/product_name"
            android:layout_toEndOf="@+id/product_image"
            android:layout_marginStart="10dp"
            android:rating="4.5"
            />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_image"
            android:layout_below="@+id/rating_bar"
            android:layout_marginStart="5dp"


            android:text="Product Price"
            android:textSize="17sp"
            android:textColor="#AE0606"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_image"
            android:layout_below="@+id/rating_bar"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"

            android:layout_marginStart="65dp"
            android:text="Save upto â‚¹500 (10%)"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/card_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_image"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/product_price"
            android:text="15% Off on HDFC Bank Cards"
            android:textSize="12sp"
            />



        <Button
            android:id="@+id/best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Seller"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_200"
            android:layout_toEndOf="@+id/product_image"
            android:layout_below="@+id/card_offer"
            android:layout_marginStart="5dp"

            />

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_image"
            android:layout_below="@+id/best"
            android:layout_marginStart="5dp"
            android:maxLength="24"
            android:text="Product Description"
            android:layout_marginTop="2dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/express"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_image"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/product_description"
            android:text="Free Delivery Available"
            android:textSize="10sp"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>