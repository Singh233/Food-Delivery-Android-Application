<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminMaintainProducts">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-700dp"
        android:src="@drawable/foodbg"
        />

    <ImageView
        android:id="@+id/reset_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_backspace"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/total_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:text="Edit Product"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />


    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="8dp"
    android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/img"
        >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/product_image_maintain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/product_name_maintain_layout"
            android:layout_below="@+id/product_image_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/purple"
            android:hint="Product Name"
            android:background="@drawable/button_bg"
            app:boxStrokeColor="@color/purple"
            app:startIconDrawable="@drawable/ic_baseline_verified_user"

            app:endIconMode="clear_text"

            android:padding="12dp"
            android:layout_margin="5dp"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/product_name_maintain_input"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/product_price_maintain_layout"
            android:layout_below="@+id/product_name_maintain_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/purple"
            android:hint="Product Price"
            android:background="@drawable/button_bg"
            app:boxStrokeColor="@color/purple"
            app:startIconDrawable="@drawable/ic_baseline_verified_user"

            app:endIconMode="clear_text"

            android:padding="12dp"
            android:layout_margin="5dp"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/product_price_maintain_input"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/product_description_maintain_layout"
            android:layout_below="@+id/product_price_maintain_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/purple"
            android:hint="Product Description"
            android:background="@drawable/button_bg"
            app:boxStrokeColor="@color/purple"
            app:startIconDrawable="@drawable/ic_baseline_verified_user"

            app:endIconMode="clear_text"

            android:padding="12dp"
            android:layout_margin="5dp"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/product_description_maintain_input"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/apply_changes_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Changes"
            android:layout_marginTop="5dp"
            android:layout_below="@id/product_description_maintain_layout"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/delete_product_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Product"
            android:layout_marginTop="5dp"
            android:layout_below="@id/apply_changes_button"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"

            />

    </RelativeLayout>



</androidx.cardview.widget.CardView>

</RelativeLayout>
