<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminAddNewProductsActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-700dp"
        android:src="@drawable/foodbg"
        />

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="Add Products"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="110dp"
        >


    <androidx.cardview.widget.CardView
        android:layout_width="185dp"
        android:layout_height="120dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_margin="12dp"
        android:id="@+id/mobile_card"
        android:layout_alignParentStart="true"
        >

        <RelativeLayout
            android:id="@+id/mobile_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:background="@drawable/mobile"
            >
            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast Food"
                android:textSize="17sp"
                android:textAllCaps="true"
                android:fontFamily="@font/baloo"
                android:textColor="@color/white"
                />
            <ImageView
                android:id="@+id/mobile_image"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/fastfood"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:layout_margin="12dp"
            android:id="@+id/electronics_card"
            android:layout_alignParentEnd="true"
            >

            <RelativeLayout
                android:id="@+id/electronics_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="@drawable/electronics"
                >
                <TextView
                    android:id="@+id/electronics_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casual Dining"
                    android:textSize="17sp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/baloo"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:id="@+id/electronics_image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/casualdining"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:layout_margin="12dp"
            android:id="@+id/appliances_card"
            android:layout_below="@+id/mobile_card"
            >

            <RelativeLayout
                android:id="@+id/appliances_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="@drawable/appliances"
                >
                <TextView
                    android:id="@+id/appliances_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:textSize="17sp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/baloo"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:id="@+id/appliances_image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/breakfast"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:layout_margin="12dp"
            android:id="@+id/furniture_card"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/electronics_card"
            >

            <RelativeLayout
                android:id="@+id/furniture_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="@drawable/furniture"
                >
                <TextView
                    android:id="@+id/furniture_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    android:textSize="17sp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/baloo"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:id="@+id/furniture_image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/lunch"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:layout_margin="12dp"
            android:id="@+id/fashion_card"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appliances_card"
            >

            <RelativeLayout
                android:id="@+id/fashion_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="@drawable/catfashion"
                >
                <TextView
                    android:id="@+id/fashion_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beverages"
                    android:textSize="17sp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/baloo"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:id="@+id/fashion_image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cocktail"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="120dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            android:layout_margin="12dp"
            android:id="@+id/add_card"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/furniture_card"
            >

            <RelativeLayout
                android:id="@+id/add_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="@drawable/corner"
                >
                <TextView
                    android:id="@+id/add_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Category"
                    android:textSize="17sp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/baloo"
                    android:textColor="#d2d2d2"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:id="@+id/add_image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_baseline_add_box_24"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>




    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/admin_add_product_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_menu"

        android:elevation="10dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/admin" />

</RelativeLayout>